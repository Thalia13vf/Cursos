package basico.datas.novaapi;

import java.time.LocalTime;
import java.time.format.DateTimeFormatter;

public class ExLocalTime2 {
	public static void main(String[] args) {
		LocalTime agora = LocalTime.now();
		DateTimeFormatter formatter = DateTimeFormatter.ofPattern("HH:mm");
		String text = agora.format(formatter);
		LocalTime dataFormatada = LocalTime.parse(text, formatter);
		
		System.out.println(agora);
		System.out.println("Hora Formatada: " + dataFormatada);
		
		LocalTime maisUmaHora = agora.plusHours(1);
		System.out.println(maisUmaHora);
		System.out.println(maisUmaHora.isAfter(agora));
		
		
	}
}
